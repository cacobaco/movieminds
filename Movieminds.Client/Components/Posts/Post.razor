@using Movieminds.Client.Components.Authentication
@using Movieminds.Presentation.Responses.Posts;

<div class="d-flex flex-column border-sm rounded-3 mb-3"
    style="min-width: 600px; max-width: 600px; max-height:1000px; background-color: #101010; ">
    <div class="d-flex align-items-center justify-content-start post-header border-bottom border-sm">
        <img type="image/jpg" class="mx-3 my-3" style="max-width:40px; border-radius:50px" src="img/default-avatar.png"
            alt="Profile Image" />
        <h5><b><a class="text-white"
                    href="@($"profile/{PostResponse.Author.Id}")">@@@PostResponse.Author.Username</a></b> postou sobre
            <b>@PostResponse.Movie.Title</b>
        </h5>
    </div>
    <div class="d-flex flex-column border-bottom border-sm">
        <h6 class="px-3 my-3">@PostResponse.Content</h6>
    </div>

    <div class="d-flex justify-content-between align-items-center p-2">
        <p>@PostResponse.CreatedAt</p>

        <AuthorizeView>
            <Authorized>
                <div class="d-flex align-items-center px-3">
                    <svg viewBox="0 0 24 24" style="min-width:30px;" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
                        <g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g>
                        <g id="SVGRepo_iconCarrier">
                            <path
                                d="M15.7 4C18.87 4 21 6.98 21 9.76C21 15.39 12.16 20 12 20C11.84 20 3 15.39 3 9.76C3 6.98 5.13 4 8.3 4C10.12 4 11.31 4.91 12 5.71C12.69 4.91 13.88 4 15.7 4Z"
                                stroke="#ffffff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                        </g>
                    </svg>
                    <h6 class="px-1 pt-1">@PostResponse.LikesCount</h6>
                </div>
            </Authorized>
        </AuthorizeView>
    </div>
</div>

@code {
    [Parameter]
    public PostResponse PostResponse { get; set; }
}
